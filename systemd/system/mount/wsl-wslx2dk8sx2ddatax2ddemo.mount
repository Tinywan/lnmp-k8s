[Unit]
Description=bind mount /%P
DefaultDependencies=no
Conflicts=umount.target
Before=local-fs.target umount.target
[Mount]
# $ ls -l /dev/disk/by-uuid
# What=UUID=daf79ec6-d3a9-4aec-b46d-95f1edc5a275
What=/dev/sdb
Where=/%P
Type=ext4
Options=bind
DirectoryMode=0755
TimeoutSec=5
[Install]
WantedBy=local-fs.target
