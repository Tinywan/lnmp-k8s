[Unit]
Description=Kubernetes API Server
Documentation=https://github.com/kubernetes/kubernetes
After=network.target
Requires=etcd.service

[Service]
# Flag --experimental-encryption-provider-config has been deprecated, use --encryption-provider-config.
# --insecure-port has been deprecated, This flag will be removed in a future version.

Environment="K8S_PATH=/etc/kubernetes"
# Environment="K8S_PATH=/opt/bin/kubernetes"

ExecStart=/opt/bin/kube-apiserver \
--enable-admission-plugins=Initializers,NamespaceLifecycle,NodeRestriction,LimitRanger,ServiceAccount,DefaultStorageClass,ResourceQuota \
--anonymous-auth=false \
--encryption-provider-config=${K8S_PATH}/encryption-config.yaml \
--advertise-address=192.168.199.100 \
--bind-address=192.168.199.100 \
--authorization-mode=Node,RBAC \
--runtime-config=api/all \
--enable-bootstrap-token-auth \
--service-cluster-ip-range=10.254.0.0/16 \
--service-node-port-range="1-65535" \
--tls-cert-file=${K8S_PATH}/certs/kubernetes.pem \
--tls-private-key-file=${K8S_PATH}/certs/kubernetes-key.pem \
--client-ca-file=${K8S_PATH}/certs/ca.pem \
--kubelet-client-certificate=${K8S_PATH}/certs/kubernetes.pem \
--kubelet-client-key=${K8S_PATH}/certs/kubernetes-key.pem \
--service-account-key-file=${K8S_PATH}/certs/ca-key.pem \
--etcd-cafile=${K8S_PATH}/certs/ca.pem \
--etcd-certfile=${K8S_PATH}/certs/kubernetes.pem \
--etcd-keyfile=${K8S_PATH}/certs/kubernetes-key.pem \
--etcd-servers="https://192.168.199.100:2379" \
--enable-swagger-ui=true \
--allow-privileged=true \
--apiserver-count=1 \
--audit-log-maxage=30 \
--audit-log-maxbackup=3 \
--audit-log-maxsize=100 \
--audit-log-path=/var/log/kube-apiserver-audit.log \
--event-ttl=1h \
--alsologtostderr=true \
--logtostderr=false \
--log-dir=/var/log/kubernetes \
--v=2 \
--requestheader-client-ca-file=${K8S_PATH}/certs/ca.pem \
--requestheader-allowed-names="" \
--requestheader-extra-headers-prefix="X-Remote-Extra-" \
--requestheader-group-headers=X-Remote-Group \
--requestheader-username-headers=X-Remote-User \
--proxy-client-cert-file=${K8S_PATH}/certs/metrics-server.pem \
--proxy-client-key-file=${K8S_PATH}/certs/metrics-server-key.pem \
--runtime-config=api/all=true

Restart=on-failure
RestartSec=5
Type=notify
User=k8s
LimitNOFILE=65536
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
